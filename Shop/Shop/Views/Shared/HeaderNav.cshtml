
@model IEnumerable<Shop.Models.DB.LoaiSanPham>
<div>@ViewBag.ca</div>
<div class="header-top">
    <div class="container">
        <div class="row text-center header-content">
            <div class="col-xs-2 text-left menu-button hidden-md hidden-lg">
                <a>
                    <svg class="w-20px h-20px" fill="currentColor" stroke="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                        <path d="M442 114H6a6 6 0 0 1-6-6V84a6 6 0 0 1 6-6h436a6 6 0 0 1 6 6v24a6 6 0 0 1-6 6zm0 160H6a6 6 0 0 1-6-6v-24a6 6 0 0 1 6-6h436a6 6 0 0 1 6 6v24a6 6 0 0 1-6 6zm0 160H6a6 6 0 0 1-6-6v-24a6 6 0 0 1 6-6h436a6 6 0 0 1 6 6v24a6 6 0 0 1-6 6z"></path>
                    </svg>
                </a>
            </div>
            <div class="col-lg-2 col-sm-7 col-xs-7 text-lg-left text-center menu-logo">
                <a href="" class="logo_wrapper">
                    <img src="@Url.Content("~/Content/images/logo.png")" alt="logo">
                </a>
            </div>
            <div class="col-lg-8 col-md-8 text-center hidden-sm hidden-xs">
                <nav class="nav-main">
                    <div class="menu-head">
                        <ul class="nav nav-1">
                            <li class="nav-item nav-items">
                                <a href="/Home" class="nav-link">Home</a>
                            </li>
                           
                            <li class="nav-item nav-items navitem-hover">
                                <a href="/Product/Index" class="nav-link" data-id="all">
                                    Shop
                                    @if (@ViewBag.count > 0)
                                    {
                                        <span class="ml-2 menu_arrow">
                                            <svg class="w-2 h-2" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                                                <path fill="currentColor" d="M207.029 381.476L12.686 187.132c-9.373-9.373-9.373-24.569 0-33.941l22.667-22.667c9.357-9.357 24.522-9.375 33.901-.04L224 284.505l154.745-154.021c9.379-9.335 24.544-9.317 33.901.04l22.667 22.667c9.373 9.373 9.373 24.569 0 33.941L240.971 381.476c-9.373 9.372-24.569 9.372-33.942 0z" class=""></path>
                                            </svg>
                                        </span>
                                    }
                                </a>
                                @if (ViewBag.count > 0)
                                {
                                    <ul class="drop-menu">
                                        @foreach (var p in Model)
                                        {
                                            <li class="nav-item">
                                                <a href="/Product/Index?id=@p.IdLoaisp">@p.TenLsp</a>
                                            </li>
                                        }
                                    </ul>
                                }

                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
            <div class="col-lg-2 col-sm-3 col-xs-3 text-right">
                <div class="search-cart">
                    <div class="ico-width ico-search">
                        <span class="tooltip-bottom tooltip-item">
                            <svg class="w-20px h-20px" fill="currentColor" stroke="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                                <path d="M508.5 468.9L387.1 347.5c-2.3-2.3-5.3-3.5-8.5-3.5h-13.2c31.5-36.5 50.6-84 50.6-136C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c52 0 99.5-19.1 136-50.6v13.2c0 3.2 1.3 6.2 3.5 8.5l121.4 121.4c4.7 4.7 12.3 4.7 17 0l22.6-22.6c4.7-4.7 4.7-12.3 0-17zM208 368c-88.4 0-160-71.6-160-160S119.6 48 208 48s160 71.6 160 160-71.6 160-160 160z"></path>
                            </svg>
                            <span class="tooltip-content">
                                Search
                            </span>
                        </span>

                    </div>
                    <a class="ico-width ico-auth hidden-sm hidden-xs" href="/Login">
                        <span class="tooltip-bottom tooltip-item">
                            <svg class="w-20px h-20px" fill="currentColor" stroke="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                                <path d="M313.6 304c-28.7 0-42.5 16-89.6 16-47.1 0-60.8-16-89.6-16C60.2 304 0 364.2 0 438.4V464c0 26.5 21.5 48 48 48h352c26.5 0 48-21.5 48-48v-25.6c0-74.2-60.2-134.4-134.4-134.4zM400 464H48v-25.6c0-47.6 38.8-86.4 86.4-86.4 14.6 0 38.3 16 89.6 16 51.7 0 74.9-16 89.6-16 47.6 0 86.4 38.8 86.4 86.4V464zM224 288c79.5 0 144-64.5 144-144S303.5 0 224 0 80 64.5 80 144s64.5 144 144 144zm0-240c52.9 0 96 43.1 96 96s-43.1 96-96 96-96-43.1-96-96 43.1-96 96-96z">
                                </path>
                            </svg>
                            <span class="tooltip-content">
                                Account
                            </span>
                        </span>

                    </a>
                    <a href="/cart" class="ico-width ico-cart">
                        <span class="tooltip-bottom tooltip-item">
                            <svg class="w-20px h-20px" fill="currentColor" stroke="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                                <path d="M352 128C352 57.42 294.579 0 224 0 153.42 0 96 57.42 96 128H0v304c0 44.183 35.817 80 80 80h288c44.183 0 80-35.817 80-80V128h-96zM224 48c44.112 0 80 35.888 80 80H144c0-44.112 35.888-80 80-80zm176 384c0 17.645-14.355 32-32 32H80c-17.645 0-32-14.355-32-32V176h48v40c0 13.255 10.745 24 24 24s24-10.745 24-24v-40h160v40c0 13.255 10.745 24 24 24s24-10.745 24-24v-40h48v256z">
                                </path>
                            </svg>
                            <span class="tooltip-content">
                                Cart
                            </span>
                            @*@if (ViewBag.count != null)
                            {*@
                                <span class="cart-count">@ViewBag.count1</span>
                            @*}
                            else
                            {
                                <span class="cart-count">0</span>
                            }*@
                        </span>

                        <div class="notification_cart">
                            <p class="notification_cart-title">Thanh cong</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


