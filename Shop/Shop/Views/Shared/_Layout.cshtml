<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/styles.css" rel="stylesheet" />
    <link href="~/Content/css/main.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <script type="text/javascript" async src="~/Scripts/js/SlideFunction.js"></script>
    <script type="text/javascript" async src="~/Scripts/js/header.js"></script>
    <script type="text/javascript" async src="~/Scripts/js/search.js"></script>
</head>
<body>
    @{Html.RenderAction("Header", "Home"); }
    @RenderBody()
    @{Html.RenderAction("Footer", "Home"); }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
